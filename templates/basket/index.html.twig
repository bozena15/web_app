{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
{% set basket = app.session.get('basket') %}

    {% if error is defined %} {{ error }} {% endif %}

{% if basket is null %}
    <p> you have no electives in your basket </p>

    {% else %}
        <ul>
            {% for course in basket %}
                <li>
                    <hr>
                    {{ course.id }} :: {{ course.description }}
                <a href="{{ path('basket_delete',{ 'id': course.id }) }}">(remove)</a>
                </li>
            {% endfor %}
        </ul>
{% endif %}
    <p>
        <a href="{{ path('basket_clear') }}">CLEAR all items in basket</a>
    </p>
    <p>
        <a href="{{ path('basket_buy') }}">BUY</a>
    </p>
{% endblock %}






