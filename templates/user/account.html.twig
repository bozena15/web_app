{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>Welcome {{ user.fullName }}</h1>

    <table class="table">
        <tbody>
        {#<tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>#}
        <tr>
            <th>Username</th>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>FullName</th>
            <td>{{ user.fullName }}</td>
        </tr>
        <tr>
            <th>PaidCourses</th>
            <td>{{ user.paidCourses|join(',') }}</td>
        </tr>
        <tr>
            <th>Notes</th>
            <td>{{ user.notes }}</td>
        </tr>
        <tr>
            <th>CreditBalance</th>
            <td>{{ user.creditBalance }}</td>
        </tr>

        </tbody>
    </table>
    <br>


    <a class="btn" href="{{ path('user_edit_account', {'id': user.id}) }}">Edit</a>

    <br><br>

    {{ include('user/_delete_form.html.twig') }}

{% endblock %}